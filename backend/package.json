{
  "name": "shopsavr-backend",
  "version": "1.0.0",
  "description": "ShopSavr Backend API - Coupon and savings management service",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --detectOpenHandles",
    "test:watch": "jest --watch --detectOpenHandles",
    "test:coverage": "jest --coverage --detectOpenHandles",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write \"**/*.js\"",
    "format:check": "prettier --check \"**/*.js\"",
    "build": "echo 'No build step required for Node.js backend'",
    "clean": "rm -rf node_modules coverage",
    "db:migrate": "node scripts/migrate.js",
    "db:seed": "node scripts/seed.js",
    "db:reset": "node scripts/reset.js",
    "deploy:staging": "echo 'Deploy to staging'",
    "deploy:production": "echo 'Deploy to production'"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.5.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "joi": "^17.10.1",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "express-rate-limit": "^6.10.0",
    "express-session": "^1.17.3",
    "connect-mongo": "^5.0.0",
    "dotenv": "^16.3.1",
    "winston": "^3.10.0",
    "nodemailer": "^6.9.5",
    "stripe": "^13.6.0",
    "socket.io": "^4.7.2",
    "redis": "^4.6.8",
    "bull": "^4.11.3",
    "axios": "^1.5.0",
    "cheerio": "^1.0.0-rc.12",
    "puppeteer": "^21.3.6",
    "cron": "^2.4.4",
    "compression": "^1.7.4",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "mongodb-memory-server": "^8.15.1",
    "eslint": "^8.50.0",
    "prettier": "^3.0.3",
    "@types/jest": "^29.5.5"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": ["<rootDir>/../tests/setup.js"],
    "testMatch": [
      "<rootDir>/../tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "**/*.js",
      "!node_modules/**",
      "!coverage/**",
      "!../tests/**"
    ],
    "rootDir": "."
  }
}