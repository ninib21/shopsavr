{
  "name": "shopsavr-extension",
  "version": "1.0.0",
  "description": "ShopSavr Browser Extension - Automatically find and apply coupon codes",
  "private": true,
  "scripts": {
    "build:dev": "webpack --mode development",
    "build:prod": "webpack --mode production",
    "build": "npm run build:prod",
    "watch": "webpack --mode development --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write \"**/*.{js,json,html,css}\"",
    "format:check": "prettier --check \"**/*.{js,json,html,css}\"",
    "clean": "rm -rf dist node_modules",
    "package:chrome": "web-ext build --source-dir=dist --artifacts-dir=packages --filename=shopsavr-chrome.zip",
    "package:firefox": "web-ext build --source-dir=dist --artifacts-dir=packages --filename=shopsavr-firefox.zip",
    "package:edge": "web-ext build --source-dir=dist --artifacts-dir=packages --filename=shopsavr-edge.zip",
    "deploy:chrome": "echo 'Deploy to Chrome Web Store'",
    "deploy:firefox": "echo 'Deploy to Firefox Add-ons'",
    "deploy:edge": "echo 'Deploy to Microsoft Edge Add-ons'"
  },
  "dependencies": {
    "webextension-polyfill": "^0.10.0"
  },
  "devDependencies": {
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
    "copy-webpack-plugin": "^11.0.0",
    "html-webpack-plugin": "^5.5.3",
    "css-loader": "^6.8.1",
    "style-loader": "^3.3.3",
    "mini-css-extract-plugin": "^2.7.6",
    "web-ext": "^7.8.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-webextension-mock": "^3.8.9",
    "@testing-library/jest-dom": "^6.1.4",
    "eslint": "^8.50.0",
    "prettier": "^3.0.3"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "jest-webextension-mock",
      "@testing-library/jest-dom"
    ],
    "testMatch": [
      "<rootDir>/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "**/*.js",
      "!node_modules/**",
      "!dist/**",
      "!tests/**",
      "!webpack.config.js"
    ]
  }
}