{
  "manifest_version": 3,
  "name": "ShopSavr - Automatic Coupon Finder",
  "version": "1.0.0",
  "description": "Automatically find and apply the best coupon codes while shopping online. Save money effortlessly!",
  "author": "ShopSavr Team",
  "homepage_url": "https://shopsavr.xyz",
  
  "permissions": [
    "activeTab",
    "storage",
    "notifications",
    "background",
    "scripting"
  ],
  
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["site-detectors.js", "coupon-automation.js", "extension-sync.js", "error-reporting.js", "settings-manager.js", "content-enhanced.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "ShopSavr - Find Coupons",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["coupon-widget.html", "icons/*"],
      "matches": ["<all_urls>"]
    }
  ],
  
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  }
}